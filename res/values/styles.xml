<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="AppBaseTheme" parent="Theme.AppCompat.Light"></style>

	<!-- Application theme -->
	<style name="AppTheme" parent="AppBaseTheme">
		<item name="android:textViewStyle">@style/text</item>
		<item name="android:windowBackground">@color/background</item>
		<!-- Support library compatibility -->
		<item name="actionBarStyle">@style/ActionBarLogo</item>
	</style>

	<style name="DialogActivity" parent="@style/Theme.AppCompat.Light.Dialog">
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:windowSoftInputMode">stateAlwaysHidden</item>
		<item name="android:windowActionModeOverlay">false</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>

	<!-- ActionBar -->
	<style name="ActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
		<item name="android:background">@color/primary</item>
		<item name="background">@color/primary</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="logo">@drawable/ic_launcher</item>
		<item name="displayOptions">useLogo|showHome|showTitle</item>
		<item name="android:icon">@drawable/ic_launcher</item>
	</style>

	<!-- Elements -->
	<style name="text">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="subtitle" parent="text">
		<item name="android:textSize">14sp</item>
	</style>

	<style name="cell">
		<item name="android:padding">16dp</item>
	</style>

	<style name="bigButton">
		<item name="android:padding">12dp</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:background">@drawable/big_button_selector</item>
	</style>

</resources>